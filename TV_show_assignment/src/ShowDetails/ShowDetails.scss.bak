.show-details {
  border-radius: 12px;
  border: 1px solid black;
  margin: 7rem auto;
  color: white;
  background-color: black;
  display: flex;
  flex-direction: column;
  

  button {
    background-color: #ffd700;
    border: 1px solid #ffd700;
    box-shadow: 0px 4px 8px rgb(0 0 0 / 20%);
    height: 27px;
    padding: 4px;
    margin: 10px;
    font-size: 14px;
    border-radius: 12px;
    cursor: pointer;
    width: 4rem;
  }

  .content {
    display: flex;
    margin: 1rem;

    .info {
      text-align: left;
      margin: 1rem;

      label {
        margin: 5px auto;
      }
    }
    .checked {
      color: rgba(253, 253, 4, 0.979);
      margin-right: 3px;
    }
  }

  .sub-heading {
    color: #ccc;
    font-size: 14px;
    margin-top: -24px;
    margin-left: 7px;
  }

  .summary {
    margin: auto 1rem;
  }

  h2 {
    text-align: center;
    flex: 1;
  }

  img {
    width: 50%;
    object-fit: cover;
  }
}