.flex-container {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  margin: auto;
  .show-card {
    margin: 10px 13px;
    width: 26%;    
    box-shadow: 0 2px 8px rgba(0, 0, 0, 26%);
    color: black;
    padding: 1rem 2rem;
    cursor: pointer;
    background: #ffd700;
  }

  img {
    width: 50%;
    object-fit: cover;
  }
}

@media (max-width: 1100px) {
  .flex-container {
    width: 100%;
    .show-card {
      width: 91%;
    }
  }
}

.search {
  margin: 8rem auto 1rem;
  input {
    border: 1px solid black;
    padding: 10px;
    margin: 1rem;
    width: 40%;
  }
  button {
    background-color: #ffd700;
    color: black;
    border-radius: 2px;
    border: 1px solid #ffd700;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.26);
    padding: 10px;
    width: 5rem;;
    font-weight: bold;
  }
}
